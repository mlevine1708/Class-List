<%= form_for(@student) do |f| %>

  <%= render partial: 'errors', locals: {object: @student} %>


  <%= f.label :name %>
  <%= f.text_field :name, required: true %>


  <%= f.label :parent %>
  <%= f.text_field :parent, required: true %>

  <%= f.label :grade %>
  <%= f.number_field :grade, min:1, max:12, required: true %>

  <%= f.label :email_address %>
  <%= f.email_field :email, required: true %>

  <%= f.label :phone_number %>
  <%= f.number_field :phone_number, required: true %>

  <br><br>

  <%= f.label :teacher_id, "Select a Teacher" %>
  <%= f.collection_select :teacher_id, Teacher.all, :id, :name, prompt: true %>
  <br><br>

  <% if !params[:teacher_id] %>



  
  <% end %>

  <br><br>
  <%= f.submit %>

<% end %>
