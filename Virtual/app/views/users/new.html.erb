<h1>Sign up here</h1>
<% if @user.errors.any? %>
       <div>
         <ul>
         <% @user.errors.full_messages.each do |message| %>
           <li><%= message %></li>
         <% end %>
         </ul>
       </div>
     <% end %>
<%= form_for(@user) do |f| %>




  <%= f.label :username %>
  <%= f.text_field :username, required:true %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Sign In" %>


<% end %>
